<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.helenafranczak.movies.MovieDetails"
  >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Chappie"
        android:padding="30dp"
        android:textColor="#ffff"
        android:textSize="30sp"
        android:gravity="left"
        android:background="#419488"
        android:id="@+id/movieTitle"

        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:fillViewport="true"
        android:layout_margin="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    tools:src="@mipmap/ic_launcher"
                    android:id="@+id/posterImage"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:id="@+id/release"
                    tools:text="12.12.2016"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:id="@+id/rating"
                        android:layout_marginLeft="20dp"
                        tools:text="5/10"
                        android:textSize="30dp"/>


            </LinearLayout>

            </LinearLayout>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:id="@+id/plot"
                android:layout_marginTop="16dp"
                android:paddingBottom="16dp"
                style="@style/TextAppearance.AppCompat.Medium"
                tools:text="sfdhaskfhasf saklfhsafklhsa sadfladsfjsfds ssflajsflsjadf sadlfjsalfj fsaljflsafj sldafjsalfjslajfd alsdjsaljflksajf sfjaslfjsajf;sladfj slf sadlfjsalflasjfla flasjflajfasl jlsfsaf
"/>


    </LinearLayout>

    </ScrollView>



</LinearLayout>

